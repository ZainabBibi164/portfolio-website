{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "emulators": {
    "firestore": {
      "port": 8081
    },
    "functions": {
      "port": 5002
    },
    "ui": {
      "port": 4001
    },
    "hosting": {
      "port": 5000
    },
    "singleProjectMode": true
  }
}
